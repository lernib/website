{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "$routes/*": ["./src/routes/*"],
      "$services/*": ["./src/services/*"]
    }
  }
}
